                app:layout_constraintTop_toBottomOf="@+id/authentic_content" />


            <View
                android:id="@+id/line_item"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="33dp"
                android:background="@color/line_item"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/insta_icon" />


            <ImageView
                android:id="@+id/app_banner"
                android:layout_width="255dp"
                android:layout_height="29dp"
                android:layout_marginStart="46dp"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="74dp"
                android:src="@drawable/ic_app_banner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line_item" />


            <TextView
                android:id="@+id/menu_left"
                android:text="@string/menu_left"
                android:layout_width="89dp"
                android:layout_height="156dp"
                android:layout_marginStart="47dp"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="71dp"
                android:textColor="@android:color/black"
                android:gravity="top"
                android:textSize="16sp"
                app:lineHeight="39dp"
                android:fontFamily="@font/barlow_medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/app_banner" />

            <TextView
                android:layout_width="105dp"
                android:layout_height="156dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="61dp"
                android:layout_marginBottom="71dp"
                android:fontFamily="@font/barlow_medium"
                android:gravity="top"
                android:text="@string/menu_right"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/app_banner"
                app:lineHeight="39dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="33dp"
                android:layout_marginBottom="88dp"
                android:background="@color/line_item"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/copyright_icon"
                android:layout_width="24dp"
                android:layout_height="25dp"
                android:layout_marginStart="45dp"
                android:layout_marginBottom="48dp"
                android:src="@drawable/ic_copyright"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:layout_width="228dp"
                android:layout_height="24dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="73dp"
                android:layout_marginBottom="48dp"
                android:fontFamily="@font/barlow_light"
                android:text="@string/copyright"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/copyright_icon"
                app:lineHeight="24dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>